<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ArticleDetails"
    tools:showIn="@layout/activity_article_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_articletitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Article Title"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_articleauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Artcle Author"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_below="@+id/txt_articletitle"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/txt_publishedon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_articleauthor"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif"
            android:text="Published on"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txt_articledesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_publishedon"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:text="Article Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/txt_readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Read More"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_articledesc"/>




    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
