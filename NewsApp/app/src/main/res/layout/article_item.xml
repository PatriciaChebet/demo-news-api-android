<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_articleicon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingTop="2dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/txt_articletitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_articleicon"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_articletitle"
            android:layout_centerInParent="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_publishedon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_author"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_articleicon"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_visitsite"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/visit"
            android:layout_below="@+id/txt_author"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="Full Article"
            android:padding="1dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/separator"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/btn_visitsite"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>
</android.support.v7.widget.CardView>